<!doctype html>
<html lang="it">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Nolo Quidditch</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/admin.css">

</head>
<body>
	<h1>Nolo Quidditch Amministrazione</h1>
	<a href="storico"><button>storico</button></a>
<table>
	 <caption>
 		<p id="newprod">Aggiungi nuovo prodotto</p>
 	</caption>

	<tbody>
		
			<tr class="price">
			<form action="/admin" method="post">
				<td><b>ID</b></td>
				<input type="hidden" value="inserimento" name="azione"/>
				<td><input type="text" value="" name="id"> </td>
				<td><b>Nome</b></td>
				<td><input type="text" value="" name="nome" id="nomeitem"></td>
				<td><b>Descrizione</b></td>
				<td><input type="text" value="" name="descrizione"></td>
				<td><b>Numero</b></td>
				<td><input type="text" value="" name="numero"></td>
				<td><b>Prezzo</b></td>
				<td><input type="text" value="" name="prezzo"></td>
				<td><input type="submit" value="aggiungi" id="bottone"/></td>
			</form>
		</tr>
	</tbody>
	
</table>


	<table>
 	<caption>
 		<p id="modificaprod">Modifica prodotti</p>
 	</caption>
 	<thead>
 	<tr class="price">
 		<td><b>ID</b></td>
 		<td><b>Nome</b></td>
 		<td><b>Descrizione</b></td>
 		<td><b>Numero</b></td>
 		<td><b>Prezzo</b></td>
 		<td><b>Modifica Stato</b></td>
 		<td><b>Modifica</b></td>
 		<td><b>Elimina</b></td>

 	</tr>
	</thead>

<tbody>
	
	<% items.forEach(function(item){ %> 
	<tr>
		<form action="/admin" method="post">
			<input type="hidden" value="<%= item.ID%>" name="id"/>
			<td id="nomeitem"><%= item.ID%></td>
			<td><input type="text" value="<%= item.nome%>" name="nome"></td>
			<td><textarea name="descrizione" class="aggiungiform" cols="45" rows="4"><%= item.descrizione%></textarea></td>
			<td><input type="number" step="1"  value="<%= item.numero%>" name="numero"></td>
			<td><input type="number" step ="0.01" value="<%= item.prezzo%>" name="prezzo"></td>
			<td><select name="stato" value="<%= item.stato%>" id="disponibilita">
				<option value="disponibile">Disponibile</option>
				<option value="temporaneamente non disponibile">Temporaneamente non disponibile</option>
				<option value="non disponibile">Non disponibile</option>
 			</select></td>
			<td><input type="submit" value="modifica" id="bottone"/></td>
		</form>
		<form action="/admin/eliminaitem" method="post">
			<input type="hidden" value="<%= item.ID%>" name="id"/>
			<td><input type="submit" value="elimina" id="bottone"/></td>
		</form>
	</tr>
	<% }); %>
	
</tbody>

</table>
</table>


</body>

</html>
